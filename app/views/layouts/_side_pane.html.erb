<div class="col-sm-3 col-md-3">
  <div class="panel-group" id="accordion">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne"><span class="glyphicon glyphicon-list">
        </span> Category</a>
        </h4>
      </div>
      <div id="collapseOne" class="panel-collapse collapse in">
        <div class="panel-body">
          <table class="table">
            <% Category.all.each do |cat|%>
            <tr>
              <td>
                  <span class="glyphicon glyphicon-pencil text-primary"></span>
                  <%= link_to "#{cat.title}","#" %>
              </td>
            <tr>
            	<%end%>
          </table>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne"><span class="glyphicon glyphicon-list">
        </span> Add to Cart <span style="float:right;font-size: 12px;color: brown;">Total products: <%= total_cart_products%></span></a>
        </h4>
      </div>
      <div id="collapseOne" class="panel-collapse collapse in">
        <div class="panel-body">
          <table class="table">
           <% cart_products_details.each do |cart|%>
            <tr>
              <td>
                <%= cart.name %>
                <%= cart.price.to_f %>
              </td>
            </tr>
           <% end %>
          </table>
           <span style="float:left;"><%= link_to 'Purchase Now',purchase_now_order_path(current_user.try(:orders).try(:active) || "nil"),class: 'btn btn-primary' if add_cart.present? || current_user.try(:orders).try(:active).present? %></span>
           <span style="float:right;font-size: 12px;color: brown;">Total Price: <%= total_cart_price %></span>
        </div>
      </div>
    </div>
  </div>
</div>